@model Library_MVC.Models.Department

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-label">
    Faculty
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.FacultyID, ((IEnumerable<Library_MVC.Models.Faculty>)ViewBag.PossibleFaculties).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.FacultyID.ToString(),
        Selected = (Model != null) && (option.FacultyID == Model.FacultyID)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.FacultyID)
</div>
